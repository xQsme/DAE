<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>SERVER_DOCUMENTS_FOLDER</param-name>
        <param-value>D:/DAE_UPLOADS/</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/login.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>StudentConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Student Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/student/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Student Services</web-resource-name>
            <description/>
            <url-pattern>/webapi/students/*</url-pattern>
            <url-pattern>/webapi/students/documentos/*</url-pattern>
            <url-pattern>/webapi/students/propostas/*</url-pattern>
            <url-pattern>/webapi/students/proposta/*/*</url-pattern>
            <url-pattern>/webapi/students/addDocumento/*</url-pattern>
            <url-pattern>/webapi/students/deleteDocumento/*/*</url-pattern>
            <url-pattern>/webapi/propostas</url-pattern>
            <url-pattern>/webapi/propostas/proponentes/*</url-pattern>
            <url-pattern>/webapi/propostas/students/*</url-pattern>
            <url-pattern>/webapi/propostas/documents/*</url-pattern>
            <url-pattern>/webapi/propostas/addDocument/*</url-pattern>
            <url-pattern>/webapi/propostas/atualizarDocument/*/*</url-pattern>
            <url-pattern>/webapi/propostas/deleteDocument/*/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Student</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>TeacherConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Teacher Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/teacher/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Teacher</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>InstitucaoConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Instituicao pages</web-resource-name>
            <description/>
            <url-pattern>/faces/instituicao/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Instituicao</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AdminConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/admin/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Admin Services</web-resource-name>
            <description/>
            <url-pattern>/webapi/teachers/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>MembroCCP</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>dae_project_realm</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>Instituicao</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>MembroCCP</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Student</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Teacher</role-name>
    </security-role>
</web-app>
